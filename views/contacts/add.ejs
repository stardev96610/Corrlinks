<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <title>Add Contact</title>
  <%- include('../include.ejs') %>
</head>

<body class="container">
  <%- include('../menu.ejs') %>
  <% if (messages.error) { %>
  <div class="alert alert-danger" role="alert">
    <%- messages.error %>
  </div>
  <% } %>

  <div class="card">
    <div class="card-header">
      Add Contact
    </div>
    <div class="card-body">
      <form action="/contacts/add" method="post">

        <div class="mb-3">
          <label class="form-label">Inmate:</label>
          <input type="text" class="form-control" name="number" value="<%= number %>" autocomplete="off">
        </div>
        <div class="mb-3">
          <label class="form-label">Contact Name:</label>
          <input type="text" class="form-control" name="contact_name" value="<%= contact_name %>" autocomplete="off">
        </div>
        <div class="mb-3">
          <label class="form-label">Contact Number:</label>
          <input type="text" class="form-control" name="contact_number" value="<%= contact_number %>" autocomplete="off">
        </div>
        <div class="form-group">
          <input type="submit" class="btn btn-info" value="Add" />
        </div>
      </form>
    </div>
  </div>

</body>

</html>